#!/bin/sh

copy_mk() {
    cmd="cp Makefile.$1 Makefile"
    echo "$cmd"; $cmd
}

case `uname` in
    OpenBSD|FreeBSD) copy_mk bsd ;;
    *)       echo "Unsupported platform: `uname`"; exit 1 ;;
esac

[ $# = 0 ] && exit 0

cat <<HELP
Adjust build options by setting the following environment variables:

`make env`

Example: build and install to your home directory

./configure
PREFIX=\$HOME/local make install

HELP
exit 1
